<!--COMMENT SECTION START-->
<div id="commentSection" class="card card-body bg-light border-0">
<!--Setting up the add new comment button that is used for collapsing-->
<div class="text-left mb-3">
    <a class="btn btn-success" role="button" data-toggle="collapse" href="#collapseComment" aria-expanded="false"
        aria-controls="collapseComment">
        <i class="fas fa-plus-circle mr-2"></i> Add new comment</a>
</div>
  <!--Comment section title-->
<h4>
<strong><i class="fas fa-comment mr-2"></i>
Comments
</strong>
</h4>

<!--Collapse Add a comment form START-->
<div class="collapse" id="collapseComment">
<div class="card card-body bg-light border-0" style="border-left: 5px solid #00C851;">
    <% if(!currentUser) { %>
        <!--If the user is not logged in, direct him to the login page-->
        <h5>You need to login before you can comment.
            <a href="#" class="loginButton">Click here</a> to go to the login page.</h5>
        <% } %>
            <% if(currentUser) { %>
                <!--If the user is logged in, show the new comment form-->
                <h4>Write a comment as <a href="/profile"><%= currentUser.username %></a>
                    
                </h4>
                <form id="add-comment-form" action="/campgrounds/<%= campground._id %>/comments" method="POST">
                    <div class="form-group"><textarea class="form-control" name="comment[text]" placeholder="Write your comment..." form="add-comment-form" rows="5"
                            cols="70"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-sm">Send
                            <span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
                        </button>
                    </div>
                </form>
                <% } %>
</div>
</div>
<!--Collapse Add a comment form END -->
<hr>

<!--Check if there are comments, if there are none say no comments.-->
<% if (campground.comments.length === 0) { %>
<em style="color: grey;">No comments yet.</em>
<% } %>

    <!--Display comments by looping through them-->
    <% campground.comments.forEach(function(comment) { %>
        <div class="row">
            <div class="col-md-11">
                <strong>
                    <% if (currentUser && currentUser._id.equals(comment.author.id)) { %>
                        <!--If the current user owns the comment, change the color of the user icon-->
                        <i style="color: orange;" class="fas fa-user-alt fa-lg"></i>
                        <% } else { %>
                            <!--Else just display it black-->
                            <i class="fas fa-user-alt fa-lg"></i>
                            <% } %>
                                <!--Print out the author username-->
                                <%= comment.author.username %>
                </strong>

                <!--Show when the comment was made-->
                <span class="small">
                    <%= moment(comment.createdAt).fromNow() %>
                </span>

                <!--Printing the comment-->
                <p class="mt-3">
                    <%- comment.text %>
                </p>
                
                <!--If the visitor is logged in and the owner of the comment, show the edit and delete buttons-->
                <% if (currentUser && currentUser._id.equals(comment.author.id)) { %>
                    <!--Edit button used for collapsing the edit comment form-->
                    <div class="editButtons text-sm-right">
                    
                    <a class="btn btn-sm btn-warning" role="button" data-toggle="collapse" href="#collapseEdit<%= comment._id %>" aria-expanded="false"
                        aria-controls="collapse<%= comment._id %>">
                        Edit</a>

                    <!--Delete comment button-->
                    <form id="delete-form" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST"
                        style="display: inline;">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                    </div>
                    <!--Edit comment form-->
                    <div class="collapse" id="collapseEdit<%= comment._id %>">
                        <div class="card card-body bg-light border-0" style="border-left: 5px solid #ffbb33; margin-top: 15px;">
                            <h4>Edit your comment
                                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                            </h4>
                            <form id="edit-comment-form<%= comment._id %>" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT"
                                method="POST">
                                <div class="form-group">
                                    <textarea class="commentText form-control" name="comment[text]" placeholder="Your comment text..." form="edit-comment-form<%= comment._id %>"
                                        rows="4" cols="70"><%- comment.text %></textarea>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-warning btn-sm">Accept changes</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <% } %>
                        <hr>
            </div>
        </div>
        <% }) %>
            </div>
            <!--COMMENT SECTION END-->