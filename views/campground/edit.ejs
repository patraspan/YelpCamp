<% include ../partials/header %>
    <div class="container">
        <h1 class="text-center mb-4">Edit
            <%= campground.name %> Campground</h1>
        <div>
            <form class="ml-auto mr-auto" style="width: 50%" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group floating-label-form-group controls">
                    <label>Camp name</label>
                    <input type="text" name="campground[name]" class="form-control" placeholder="Campground name" value="<%=campground.name%>"
                        required data-validation-required-message="Please enter Camp title.">
                    <p class="help-block text-danger"></p>
                </div>
                <!--<div class="form-group floating-label-form-group controls">
                <label>Image</label>
                <input type="file" name="image" class="form-control" accept="image/*" placeholder="image">
                <p class="help-block text-danger"></p>
            </div>-->
            <div class="form-group controls"> 
                    <label class="control-label" id="inputGroupFileAddon01">Image</label>
                    <div class="custom-file" id="customFile" lang="en">
                        <input type="file" class="custom-file-input" name="image" id="exampleInputFile" aria-describedby="fileHelp">
                        <label class="custom-file-label" for="exampleInputFile">
                        Select file...
                        </label>
                    </div>
                </div>
            <div class="form-group floating-label-form-group controls">
                    <label>Image</label>
                    <input type="text" name="image" class="form-control"  placeholder="image">
                    <p class="help-block text-danger"></p>
                </div>
                <div class="form-group floating-label-form-group controls">
                    <label>Price</label>
                    <input type="number" name="campground[price]" class="form-control" placeholder="price" value="<%=campground.price %>" 
                        min="0.01" step="0.01" required data-validation-required-message="Please enter Camp title.">
                    <p class="help-block text-danger"></p>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" value="<%= campground.location %>">
                </div>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>Description</label>
                        <textarea cols="30" rows="5" class="form-control" placeholder="Description" name="campground[description]"
                            required data-validation-required-message="Please enter a content.">
                            <%=campground.description%>
                        </textarea>
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
                    </div>
                </div>
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-secondary"> GO BACK</a>
            </form>

        </div>
    </div>
    <% include ../partials/footer %>