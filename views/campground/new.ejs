<% include ../partials/header %>
    <div class="container">
        
        <legend class="display-4 text-center mb-4">New Campgroud</legend>
        <div>
            <form class="ml-auto mr-auto" style="width: 50%" action="/campgrounds" method="POST" enctype="multipart/form-data">
                <div class="form-group controls">
                    <label>Camp name</label>
                    <input type="text" name="name" class="form-control" placeholder="Campground name" required data-validation-required-message="Please enter Camp title.">
                    <p class="help-block text-danger"></p>
                </div>
                <div class="form-group controls"> 
                    <label class="control-label" id="inputGroupFileAddon01">Image</label>
                    <div class="custom-file" id="customFile" lang="en">
                        <input type="file" class="custom-file-input" name="image" id="exampleInputFile" aria-describedby="fileHelp">
                        <label class="custom-file-label" for="exampleInputFile">
                        Select file...
                        </label>
                    </div>
                </div>

                <!--<div class="form-group controls">
                    <label>Image</label>
                    <input type="text" name="image" class="form-control"  placeholder="image">
                    <p class="help-block text-danger"></p>
                </div>-->
                <div class="form-group controls">
                    <label>Price</label>
                    <input type="number" name="price" class="form-control" placeholder="price" min="0.01" step="0.01" required data-validation-required-message="Please enter price.">
                    <p class="help-block text-danger"></p>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" name="location" type="text" placeholder="Yosemite National Park, CA">
                </div>
                <div class="control-group">
                    <div class="form-group controls">
                        <label>Description</label>
                        <textarea cols="30" name="description" rows="5" class="form-control" placeholder="Description"  required
                            data-validation-required-message="Please enter a content."></textarea>
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
                    </div>
                </div>
                <a href="/campgrounds" class="btn btn-outline-secondary"> GO BACK</a>
            </form>
        </div>
    </div>
    <% include ../partials/footer %>