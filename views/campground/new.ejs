<% include ../partials/header %>
    <div class="container">
        <h1 class="text-center mb-4">Create a New Campgroud</h1>
        <div>
            <form class="ml-auto mr-auto" style="width: 50%" action="/campgrounds" method="POST">
                <div class="form-group floating-label-form-group controls">
                    <label>Camp name</label>
                    <input type="text" name="name" class="form-control" placeholder="Campground name" required data-validation-required-message="Please enter Camp title.">
                    <p class="help-block text-danger"></p>
                </div>
                <div class="form-group floating-label-form-group controls">
                    <label>Image</label>
                    <input type="text" name="image" class="form-control" placeholder="image" required data-validation-required-message="Please enter Camp title.">
                    <p class="help-block text-danger"></p>
                </div>
                <div class="form-group floating-label-form-group controls">
                    <label>Price</label>
                    <input type="number" name="price" class="form-control" placeholder="price" min="0.01" step="0.01" required data-validation-required-message="Please enter Camp title.">
                    <p class="help-block text-danger"></p>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" placeholder="Yosemite National Park, CA">
                </div>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>Description</label>
                        <textarea cols="30" rows="5" class="form-control" placeholder="Description" name="description" id="description" required
                            data-validation-required-message="Please enter a content."></textarea>
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
                    </div>
                </div>
                <a href="/campgrounds" class="btn btn-outline-secondary"> GO BACK</a>
            </form>
        </div>
    </div>
    <% include ../partials/footer %>