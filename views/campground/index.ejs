<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p> View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new"> Add new Campground</a>
            </p>
            <p>
                <form class="form-inline" action="/campgrounds" method="GET">
                    <div class="form-group">
                        <input class="form-control" type="text" name="search" placeholder="search..">
                        <input class="btn btn-outline-secondary" type="submit" name="" value="Search">
                    </div>
                </form>
            </p>
        </div>
    </header>

    <div class="row text-center">
        <% if(noMatch !== null) { %>
        <div class="col-md-12 text-center">

            <h3>
                <%= noMatch %>
            </h3>

        </div>
        <% } %>
        <% campgrounds.forEach(function(campground) {%>
        <div class="col-md-3 col-sm-6">

            <div class="card mb-3">
                <img class="card-img-top" src="<%= campground.image %>" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.name %>
                    </h5>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
                    </p>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>

<nav aria-label="Search result pages">
<% if (pages && pages > 0) { %>
  <ul class="pagination justify-content-center">
  <% if (current == 1) { %>
  <li class="page-item disabled">
      <a class="page-link"  tabindex="-1">First</a>
    </li>
  <% } else { %>
  <li class="page-item">
  <a class="page-link" href="/campgrounds" tabindex="-1">First</a>
</li>
<% } %>
<% if (current == 1) { %>
        <li class="page-item disabled"><a class="page-link">«</a></li>
        <% } else { %>
        <li><a class="page-link" href="/campgrounds?page=<%= Number(current) - 1 %>">«</a></li>
        <% } %>
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        <% if (i !== 1) { %>
        <li class="page-item disabled"><a class="page-link">...</a></li>
        <% } %>
        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
        <% if (i == current) { %>
        <li class="page-item active"><a class="page-link"><%= i %></a></li>
        <% } else { %>
        <li><a class="page-link" href="/campgrounds?page=<%= i %>"><%= i %></a></li>
        <% } %>
        <% if (i == Number(current) + 4 && i < pages) { %>
        <li class="page-item disabled"><a class="page-link">...</a></li>
        <% } %>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="page-item disabled"><a class="page-link">»</a></li>
        <% } else { %>
        <li><a class="page-link" href="/campgrounds?page=<%= Number(current) + 1 %>">»</a></li>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="page-item disabled"><a class="page-link">Last</a></li>
        <% } else { %>
        <li><a class="page-link" href="/campgrounds?page=<%= pages %>">Last</a></li>
        <% } %>
  </ul>
  <% } %>
</nav>




<% include ../partials/footer %>