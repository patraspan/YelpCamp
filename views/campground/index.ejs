<% include ../partials/header %>
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to YelpCamp!</h1>
                <p> View our hand-picked campgrounds from all over the world</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/campgrounds/new"> Add new Campground</a>
                </p>
                <p>
                <form class="form-inline" action="/campgrounds" method="GET">
                    <div class="form-group">
                        <input class="form-control" type="text" name="search" placeholder="search..">
                        <input class="btn btn-outline-secondary" type="submit" name="" value="Search">
                    </div>
                </form>
                </p>
            </div>
        </header>

        <div class="row text-center">
        <% if(noMatch !== null) { %>
        <div class="col-md-12 text-center">
            
            <h3><%= noMatch %></h3>
         
        </div>
        <% } %>
            <% campgrounds.forEach(function(campground) {%>
                <div class="col-md-3 col-sm-6">

                    <div class="card mb-3">
                        <img class="card-img-top" src="<%= campground.image %>" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= campground.name %>
                            </h5>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
                            </p>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>





    <% include ../partials/footer %>