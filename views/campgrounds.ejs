<% include partials/header %>




    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to YelpCamp!</h1>
                <p> View our hand-picked campgrounds from all over the world</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/campgrounds/new"> Add new Campground</a>
                </p>
            </div>
        </header>


        <div class="row text-center">
            <% campgrounds.forEach(function(campground) {%>
                <div class="col-md-3 col-sm-6">

                    <div class="card mb-3">
                        <img class="card-img-top" src="<%= campground.image %>" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= campground.name %>
                            </h5>
                            <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This
                                content is a little bit longer.</p>
                            <p class="card-text">
                                <small class="text-muted">Last updated 3 mins ago</small>
                            </p>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>





    <%include partials/footer %>